{
    "name": "vscode-lf",
    "displayName": "Lf for VSCode",
    "publisher": "dimfred",
    "description": "",
    "version": "0.0.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/dimfred/vscode-lf"
    },
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "lf.open",
                "title": "Lf: open"
            }
        ],
        "keybindings": [],
        "configuration": {
            "type": "object",
            "title": "Lf Configuration",
            "properties": {
                "lf.command": {
                    "type": "string",
                    "default": "lf ${file}",
                    "description": "Command to run lf in the terminal (depending on operating system & shell)"
                },
                "lf.focusCommand": {
                    "type": "string",
                    "default": "lf -remote \"send $id select ${file}\"",
                    "description": "Template for the focus command"
                },
                "lf.openInEditor": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to open lf in the editor or in the terminal"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "deploy": "vsce publish"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "@vscode/vsce": "^3.2.2",
        "esbuild": "^0.25.0",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    }
}
